
@{
    Layout = null;
}

@{
    ViewBag.Title = "AdminView";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Resource/jquery-3.3.1.min.js"></script>
    <script src="~/Resource/jquery.cookie.js"></script>
    <script src="~/Resource/bootstrap.min.js"></script>
    <script src="~/Resource/publicJs.js"></script>
    <script src="~/Resource/userPage/js/adminPageJs.js"></script>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Resource/publicStyle.css">
    <link rel="stylesheet" type="text/css" href="~/Resource/userPage/css/adminPageStyle.css">
    <title>admin</title>
</head>
<body>
    <!--用户服务-->
    <ul class="nav nav-tabs container" role="tablist" id="adminTab">
       
                <li role="presentation" class="col-md-3 active"><a href="#service1" role="tab" data-toggle="tab" style="padding: 0px">租借订单管理</a></li>
                <li role="presentation" class="col-md-3"><a href="#service2" role="tab" data-toggle="tab" style="padding: 0px">修图订单管理</a></li>
                <li role="presentation" class="col-md-3"><a href="#service3" role="tab" data-toggle="tab" style="padding: 0px">职员信息管理</a></li>
                <li role="presentation" class="col-md-3"><a href="#service4" role="tab" data-toggle="tab" style="padding: 0px">用户信息管理</a></li>
    </ul>

    <div class="tab-content container" id="adminTabContent">
        <div class="tab-pane fade in active" id="service1">
            <div class="container" style="margin-top:50px">
                <form class="form-inline" method="post" action="../Admin/EquAddOrSearch">
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="ORDERID" style="width: 165px" placeholder="订单号" id="order2search1">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="USER" style="width: 160px" placeholder="用户ID" id="order2search2">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="EQUID" style="width: 165px" placeholder="设备号" id="order3search3">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="START" type="date" style="width: 200px" id="order4search4">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="END" type="date" style="width: 200px" id="order5search5">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" name="PAY" style="width: 120px" placeholder="金额" id="order6search6">
                    </div>
                    <button class="btn btn-success" name="op" value="search" style="width: 50px">搜索</button>
                    <button class="btn btn-success" name="op" value="add" style="width: 50px">添加</button>
                </form>

            </div>
            <div class="container">
                <table class="table mytable table-striped table-bordered table-hover" style=" width: 100%">
                    <thead class="bg-info">
                        <tr><th>订单号</th><th>用户ID</th><th>设备号</th><th>起租日期</th><th>结束日期</th><th>金额</th><th>操作</th></tr>
                    </thead>
                    <tbody id="orderTable1">
                        @foreach (var order in (List<WebApplication3.Models.ORDER_EQUIPMENT_INFO>)ViewData["EQU"])
                        {
                            <tr>
                                <td>@order.ORDER_ID</td>
                                <td>@order.ORDER_USER_ID</td>
                                <td>@order.ORDER_EQUIPMENT_ID</td>
                                <td>@order.ORDER_START_DATE</td>
                                <td>@order.ORDER_END_DATE</td>
                                <td>@order.ORDER_PAYMENT</td>
                                <td style="width: 100px">
                                    <form method="post" action="../Admin/EquDelete">
                                        <button name="orderID" value=@order.ORDER_ID><span class="glyphicon glyphicon-remove"></span></button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row" style="text-align: center">
                    <ul class="pagination" style="border: black 1px solid;" id="pagination1">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>


        </div>
        <div class="tab-pane fade" id="service2">
            <div class="container" style="margin-top:50px">
                <form class="form-inline" method="post" action="../Admin/PicAddOrSearch">
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 160px" name="PICID" placeholder="照片ID" id="order2search1">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 160px" name="USER" placeholder="用户ID" id="order2search2">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 180px" name="REP" placeholder="修图师ID" id="order3search3">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" type="date" name="START" style="width: 200px" id="order4search4">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" type="date" name="END" style="width: 200px" id="order5search5">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 110px" name="PAY" placeholder="金额" id="order6search6">
                    </div>
                    <button class="btn btn-info" name="op" value="search" style="width: 50px">搜索</button>
                    <button class="btn btn-success" name="op" value="add" style="width: 50px">添加</button>
                </form>

            </div>

            <div class="container">
                <table class="table mytable table-striped table-bordered table-hover" style="width: 100%">
                    <thead class="bg-info">
                        <tr><th>照片ID</th><th>用户ID</th><th>修图师ID</th><th>开始日期</th><th>结束日期</th><th>金额</th><th>操作</th></tr>
                    </thead>
                    <tbody id="orderTable2">
                        @foreach (var pic in (List<WebApplication3.Models.CONTRACT_PHOTO_INFO>)ViewData["PIC"])
                        {
                            <tr>
                                <td>@pic.CONTRACT_PHOTO_ID</td>
                                <td>@pic.CONTRACT_USER_ID</td>
                                <td>@pic.CONTRACT_PHOTOREPAIRER_ID</td>
                                <td>@pic.CONTRACT_START_DATE</td>
                                <td>@pic.CONTRACT_END_DATE</td>
                                <td>@pic.CONTRACT_PAYMENT</td>
                                <td style="width: 100px">
                                    <form method="post" action="../Admin/PicDelete">
                                        <button name="picID" value=@pic.CONTRACT_PHOTO_ID><span class="glyphicon glyphicon-remove"></span></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row" style="text-align: center">
                    <ul class="pagination" style="border: black 1px solid;" id="pagination2">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="tab-pane fade in" id="service3">
            <div class="container" style="margin-top:50px">
                <form class="form-inline" method="post" action="../Admin/EmpAddOrSearch">
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 170px" name="ID" placeholder="ID" id="order2search1">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 150px" name="NAME" placeholder="姓名" id="order2search2">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 120px" name="SEX" placeholder="性别" id="order3search3">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 330px" name="EMAIL" placeholder="邮箱" id="order4search4">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 140px" name="DEP" placeholder="部门" id="order6search6">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 100px" name="TIT" placeholder="职位" id="order6search6">
                    </div>
                    <button class="btn btn-info" name="op" value="search" style="width: 50px">搜索</button>
                    <button class="btn btn-success" name="op" value="add" style="width: 50px">添加</button>
                </form>

            </div>
            <div class="container">
                <table class="table mytable table-striped table-bordered table-hover" style="width: 100%">
                    <thead class="bg-info">
                        <tr><th>ID</th><th>姓名</th><th>性别</th><th>邮箱</th><th>部门</th><th>职位</th><th>操作</th></tr>
                    </thead>
                    <tbody id="empTable">
                        @foreach (var emp in (List<WebApplication3.Models.EMPLOYEE>)ViewData["EMP"])
                        {
                            string sex = "男";
                            if (emp.EMPLOYEE_SEX == 1)
                            {
                                sex = "女";
                            }
                            <tr>
                                <td>@emp.EMPLOYEE_ID</td>
                                <td>@emp.EMPLOYEE_NAME</td>
                                <td>@sex</td>
                                <td>@emp.EMPLOYEE_EMAIL</td>
                                <td>@emp.EMPLOYEE_DEPART_NAME</td>
                                <td>@emp.EMPLOYEE_TITLE</td>
                                <td style="width: 100px">
                                    <form method="post" action="../Admin/EmpDelete">
                                        <button name="picID" value=@emp.EMPLOYEE_ID><span class="glyphicon glyphicon-remove"></span></button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row" style="text-align: center">
                    <ul class="pagination" style="border: black 1px solid;" id="pagination3">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>

        </div>
        <div class="tab-pane fade" id="service4">
            <div class="container" style="margin-top:50px">
                <form class="form-inline">
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 150px" name="ID" placeholder="ID" id="order2search1">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 220px" name="NAME" placeholder="姓名" id="order2search2">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 220px" name="SEX" placeholder="性别" id="order3search3">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 210px" name="ADDRESS" placeholder="住址编号" id="order4search4">
                    </div>
                    <div class="input-group">
                        <div class="input-group-addon sr-only"><span class="glyphicon glyphicon-search"></span></div>
                        <input class="form-control" style="width: 215px" name="EMAIL" placeholder="邮箱" id="order5search5">
                    </div>
                    <button class="btn btn-info" name="op" value="search" style="width: 50px">搜索</button>
                    <button class="btn btn-success" name="op" value="add" style="width: 50px">添加</button>
                </form>

            </div>
            <div class="container">
                <table class="table mytable table-striped table-bordered table-hover" style=" width: 100%">
                    <thead class="bg-info">
                        <tr><th>ID</th><th>姓名</th><th>性别</th><th>住址编号</th><th>邮箱</th><th>操作</th></tr>
                    </thead>
                    <tbody id="userTable">
                        @foreach (var user in (List<WebApplication3.Models.CUSTOMER>)ViewData["USER"])
                        {
                            string sex = "男";
                            if (user.CUSTOMER_SEX == 1)
                            {
                                sex = "女";
                            }
                            <tr>
                                <td>@user.CUSTOMER_ID</td>
                                <td>@user.CUSTOMER_NAME</td>
                                <td>@sex</td>
                                <td>@user.CUSTOMER_ADDRESS_ID</td>
                                <td>@user.CUSTOMER_EMAIL</td>
                                <td style="width: 100px">
                                    <form method="post" action="../Admin/UserDelete">
                                        <button name="userID" value=@user.CUSTOMER_ID><span class="glyphicon glyphicon-remove"></span></button>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row" style="text-align: center">
                    <ul class="pagination" style="border: black 1px solid;" id="pagination4">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>


        </div>

    </div>
</body>
</html>