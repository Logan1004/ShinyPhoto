
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="../../Resource/jquery-3.3.1.min.js" ></script>
    <script src="../../Resource/bootstrap.min.js" ></script>
    <script src="../../Resource/publicJs.js" type="text/javascript"></script>
    <script src="../../Resource/jquery.cookie.js" ></script>
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="../../Resource/publicStyle.css">
</head>
<body>
    <!--导航-->
    <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation" id="mainPageNav">
        <div class="container-fluid">
            <div class="col-md-1"></div>
            <div class="navbar-header col-md-3">
                <div class="navbar-header col-md-3">
                    <img src="../../Resource/publicImg/NonBG_Logo.png" class="navLogo" id="myLogo">
                </div>
            </div>
            <div class="col-md-3" style="height: 88px"></div>
            <ul class="nav navbar-nav" style="margin-top: 20px;">
                <li><a href="../Home/Index">首页</a></li>
                <li><a href="../Eqpt/EqptPage">器材租凭</a></li>
                <li><a href="../Pic/PicPage">图片服务</a></li>
                <li><a href="../AboutUs/AboutUs">关于我们</a></li>
                <li>
                    @if (!string.IsNullOrEmpty(HttpContext.Current.Request["loginState"]))
                    {
                        <a href="../Home/UserInfo">@HttpContext.Current.Request["loginState"]</a>
                    }
                    else
                    {
                        <a href="../Login/Login">登录</a>
                    }


                </li>
                <div class="page-header"></div>
            </ul>
        </div>
    </nav>
    <!--欢迎界面轮播图-->
    <div class="container-fluid" style="padding: 0px; height: 100%; max-height: 100%">
        <div id="topSlide" class="carousel slide">
            <div class="carousel-inner">
                <div class="item  active">
                    <img class="topSlideImg" alt="" src="../../Resource/publicImg/MainPhoto1_Final.jpg">
                </div>
                <div class="item">
                    <img class="topSlideImg" alt="" src="../../Resource/publicImg/MainPhoto2_Final.jpg">
                </div>
                <div class="item">
                    <img class="topSlideImg" alt="" src="../../Resource/publicImg/MainPhoto3_Final.jpg">
                </div>
                <div class="item">
                    <img class="topSlideImg" alt="" src="../../Resource/publicImg/MainPhoto4_Final.jpg">
                </div>
            </div>
            <a class="left carousel-control" data-slide="prev" href="#topSlide"><span class="glyphicon glyphicon-chevron-left"></span></a>
            <a class="right carousel-control" data-slide="next" href="#topSlide"><span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>
    @RenderBody()
</body>
</html>