@model Tuple<WebApplication3.Models.ORDER_EQUIPMENT_INFO>
@{
    Layout = "../Shared/_Layout.cshtml";
}

@*<script src="~/Resource/eqptPage/js/eqptBuyPageJs.js"></script>*@
<link rel="stylesheet" type="text/css" href="~/Resource/eqptPage/css/eqptBuyPageStyle.css">
<title>Buy</title>

<!--购买界面-->
<div class="container" style="border: black 0px  solid; width: 90%; padding: 0px; margin-top: 30px;">
    <div class="eqptPic col-md-6" style="padding: 0px">
        <div class="wrap">
            @{ 
                var imgSrc = "../../Resource/eqptPage/img/" + ViewData["EQTID"] + ".jpg";
            }
            <img src=@imgSrc style="width: 100%; height: 100%">
        </div>
    </div>
    <div>
        @using (Html.BeginForm("EqptBuy", "Eqpt", FormMethod.Post, new { @class = "row", style = "border: black 0px solid; height: 40px; margin-top: 35px" }))
        {
                <div class="eqptPic col-md-6" style=" border: gainsboro 1px solid; box-shadow: 2px 2px 3px gainsboro; height: 400px; left: 10px; background-color: white">
                    <div class="row" style="border: black 0px solid; height: 50px; margin-top: 35px">
                        <div class="col-md-4 col-md-offset-1 priceInfo" style="border: black 0px solid; height: 40px">¥ @ViewData["RENT"]/天</div>
                    </div>
                    <div class="row" style="border: black 0px solid; height: 40px; margin-top: 20px">
                        <div class="col-md-offset-1 col-md-8 typeInfo">@ViewData["DETAIL"]</div>
                    </div>

                    <div class="col-md-2 col-md-offset-1" style="padding: 0px;">
                        <p class="inputLabel">送货地址:</p>
                    </div>
                    <div class="form-group col-md-7" style="padding: 0px">
                        <div class="input-group" style="width: 100%; margin-left: 0px">
                            <label class="sr-only" for="address">用户名</label>
                            @Html.EditorFor(model => model.Item1.ORDER_ADDRESS_DETAIL, new { htmlAttributes = new { type = "text" ,id = "address" ,@class="form-control", placeholder="请输入送货地址" ,style="height: 40px" } })

                        </div>
                    </div>
                    <div class="col-md-2 col-md-offset-1" style="padding: 0px;">
                        <p class="inputLabel">起租日期:</p>
                    </div>
                    <div class="form-group col-md-7" style="padding: 0px">
                        <div class="input-group" style="width: 100%; margin-left: 0px">
                            <label class="sr-only" for="startDate">用户名</label>
                            @Html.EditorFor(model => model.Item1.ORDER_START_DATE, new { htmlAttributes = new { type = "date", id = "startDate", @class = "form-control", placeholder = "输入提货日期", style = "height: 40px" } })
                        </div>
                    </div>
                    <div class="col-md-2 col-md-offset-1" style="padding: 0px;">
                        <p class="inputLabel">还租日期:</p>
                    </div>
                    <div class="form-group col-md-7" style="padding: 0px">
                        <div class="input-group" style="width: 100%; margin-left: 0px">
                            <label class="sr-only" for="endDate">结束日期</label>
                            @Html.EditorFor(model => model.Item1.ORDER_END_DATE, new { htmlAttributes = new { type = "date", id = "endDate", @class="form-control",placeholder="输入归还日期",style="height: 40px"}})
                        </div>
                    </div>

                    <div class="row" style="border: black 0px solid; height: 40px; margin-top: 130px">
                        <div class="col-md-offset-1 col-md-8 tipInfo" style="border: black 0px solid; padding: 0px">诚信交易，有借有还，再借不难</div>
                    </div>
                </div>
                <div class="eqptPic col-md-6" style="border: gainsboro 0px solid; box-shadow: 2px 2px 3px gainsboro; height: 100px; left: 10px; top: 20px; background-color: white">
                    <button class="btn-lg btn-danger center-block"  style="width: 50%; height: 50px; margin-top: 30px">立即租用</button>
                </div>
        }

    </div>
</div>

